<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/my_default_margin_samall">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/portfolio_irem_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/vit"
                android:scaleType="centerInside"
                android:layout_centerHorizontal="true"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:text="vitaBoom"
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/service_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="website"
                    android:layout_marginBottom="@dimen/my_default_margin_samall"
                    android:layout_gravity="center_horizontal"/>

                <Button

                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="visit"
                    android:theme="@style/MyButton"
                    android:layout_marginBottom="@dimen/my_default_margin_samall"
                    android:id="@+id/visit_button" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>