<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_default_mrgin"
        android:layout_marginRight="@dimen/my_default_mrgin"
        android:layout_marginTop="@dimen/my_default_mrgin"
        android:layout_marginBottom="@dimen/my_default_mrgin"
        android:background="@drawable/background"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/news_cardView"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="new event"
                    android:textAllCaps="true"
                    android:textSize="20dp"
                    android:layout_marginBottom="@dimen/my_default_margin_samall"
                    android:fontFamily="sans-serif"
                    android:id="@+id/news_title"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19/9/2015"
                    android:layout_gravity="right"
                    android:id="@+id/news_date"
                    android:layout_below="@+id/news_title"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aasdfsgdhhddsfghgfdadfsdfdgfgdfddfgfgfghgfgsdhgfghgfagsdgfnfg"
                android:fontFamily="sans-serif"
                android:id="@+id/news_body"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:maxWidth="500dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:id="@+id/news_image"
                android:clickable="true"/>
        </LinearLayout>



    </android.support.v7.widget.CardView>

</FrameLayout>

